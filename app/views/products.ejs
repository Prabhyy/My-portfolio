<%- include('partials/header.ejs') %>
<%- include('partials/main_nav.ejs') %>

<style>
    .container {
        position: relative;
        width: 100%;
    }

    .jumbotron {
        background-color: rgba(255, 255, 255, 0.8);
        margin: 20px;
        border-radius: 15px;
        padding: 20px;
        border: 2px solid #ddd;
    }

    .display-4 {
        font-family: 'Trebuchet MS';
    }

    .skill-container {
        display: flex;
        flex-wrap: wrap;
        gap: 20px;
        justify-content: center;
    }

    .skill-item {
        position: relative;
        width: 150px; 
        margin-bottom: 20px; 
    }

    .skill-item img {
        width: 90%;
        height: auto;
        transition: transform 0.5s ease;
        border-radius: 20px; 
    }

    .skill-item:hover img {
        transform: scale(1);
    }

    .overlay {
        position: absolute;
        top: 0;
        bottom: 0;
        left: 0;
        right: 0;
        height: 101%;
        width: 101%;
        opacity: 0;
        transition: .5s ease;
        background-color: darkgrey;
        border-radius: 20px; 
    }

    .skill-item:hover .overlay {
        opacity: 1;
    }

    .text {
    color: black;
    font-size: 20px;
    position: absolute;
    top: 50%;
    left: 50%;
    transform: translate(-50%, -50%);
    -ms-transform: translate(-50%, -50%);
    font-family: 'Trebuchet MS';
    font-weight: bold; 
}

</style>

<main class="container" style="background: url('/Assests/background2.jpeg') no-repeat center center; background-size: cover;">
    <div class="jumbotron">
        <h1 class="display-4">Welcome to Skills page</h1>
        <blockquote>The following languages I have earned knowledge from my institution</blockquote>
        <div class="skill-container">
            
            <div class="skill-item">
                <img src="/Assests/Java.png" alt="Java Programming">
                <div class="overlay">
                    <div class="text">Java Programming</div>
                </div>
            </div>
            
            <div class="skill-item">
                <img src="/Assests/html_css.png" alt="HTML/CSS">
                <div class="overlay">
                    <div class="text">HTML/CSS</div>
                </div>
            </div>
            
            <div class="skill-item">
                <img src="/Assests/csharp.png" alt="C#">
                <div class="overlay">
                    <div class="text">C#</div>
                </div>
            </div>
            
            <div class="skill-item">
                <img src="/Assests/phyton.png" alt="Python">
                <div class="overlay">
                    <div class="text">Python</div>
                </div>
            </div>
            
            <div class="skill-item">
                <img src="/Assests/javascript.png" alt="JavaScript">
                <div class="overlay">
                    <div class="text">JavaScript</div>
                </div>
            </div>
            
            <div class="skill-item">
                <img src="/Assests/git.png" alt="Git">
                <div class="overlay">
                    <div class="text">Git</div>
                </div>
            </div>
        </div>
    </div>
</main>

